{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      // These must be synchronize with alias in webpack.config.js
      "@utils/*": ["src/utils/*"],
      "@assets/*": ["src/assets/*"],
      "@style/*": ["src/style/*"],
      "@/*": ["src/*"]
    }
  },
  "files": ["module.d.ts"],
  "include": ["src/**/*"]
}
